{
    "version": 2,
    "env": {
        "MONGO_URI": "postgresql://motosharedb_owner:xELv2g8IPOhA@ep-jolly-mud-a1k3em55.ap-southeast-1.aws.neon.tech/motosharedb?sslmode=require"
    },
    "builds": [
        {
            "src": "src/main.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/main.ts",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "PATCH", 
                "DELETE"
            ]
        }
    ], 
    "crons": [
        {
            "path": "/api/cron/mainCronJobWorkflowDaily", 
            "schedule": "0 0 * * *"
        }, 
        {
            "path": "/api/cron/mainCronJobWorkflowWeekly", 
            "schedule": "0 0 * * 1"
        }
    ]
}
